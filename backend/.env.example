# MongoDB Atlas 連接字串
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/split-bill?retryWrites=true&w=majority

# JWT 密鑰（請使用隨機生成的複雜字串）
# 生成方式: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_please_change_this

# Vercel Cron Job 驗證密鑰（選填，增加安全性）
# 生成方式: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your_cron_secret_here

# 伺服器設定
PORT=3001

# CORS 允許的前端網址（多個網址用逗號分隔）
# 本地開發
FRONTEND_URL=http://localhost:5173
# 生產環境範例（部署時修改）
# FRONTEND_URL=https://yourusername.github.io,https://your-custom-domain.com
